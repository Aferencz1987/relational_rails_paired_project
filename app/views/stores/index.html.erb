<div class="text-right">
  <button type="button" class="btn btn-secondary" style="float: right;"><a href="/stores">Store list</a></button>
</div>
<h1>Store directory</h1>


<%@stores.created_at_order.each do |store| %>
  <h3><a href=<%="/stores/#{store.id}/tools"%>><%= store.name %></a></h3>
  <p><%= store.created_at.strftime("%A, %B %d, %Y") %></p>
  <button type="button"><a href=<%= "/stores/#{store.id}/edit" %>>update</a></button>
  <form action="/store/<%= store.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<br>
<% end %>
<br>
<h4><a href="/stores/new">new store</a></h4>


<% end %>
